<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:paddingTop="22dp">

    <ImageView
        android:id="@+id/cbc_broker_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/cbc_comm_bg_circula_friend_list"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/cbc_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbc_broker_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:visibility="gone"
        android:src="@drawable/agregar_contacto"/>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/cbc_broker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbc_status_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/color_black_light"
        android:textSize="16sp"
        tools:text="Broker Name"/>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/cbc_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbc_broker_name"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:text="-- / --"
        android:textColor="@color/cbc_location_text"
        android:textSize="14sp"
        tools:ignore="HardcodedText"/>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/cbc_connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbc_location_text"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/cbc_color_gray_light"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="Is now a connection"/>

</RelativeLayout>

